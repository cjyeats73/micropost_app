<%= turbo_include_tags %>
<div id="<%= dom_id micropost %>">
  <li>
    <%= link_to gravatar_for(micropost.user), micropost.user %>
    <%= link_to micropost.user.name, micropost.user %>
    <%= micropost.content %>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago
    <%= button_to "delete", micropost, data:{ "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </li>

</div>
